@model IEnumerable<WebApplication2.Models.MARCA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marcas</h2>

<p>
    @Html.ActionLink("Agregar marca", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Descripción
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPCION)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_MARCA }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID_MARCA }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_MARCA })
        </td>
    </tr>
}

</table>
