@model IEnumerable<WebApplication2.Models.AUTOS>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Autos</h2>

<p>
    @Html.ActionLink("Agregar auto", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="ID_MARCA">MARCA</label>
                @Html.DropDownList("ID_MARCA", null, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="ANO">Año</label>
                @Html.DropDownList("ID_AUTO", null, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="PATENTE">Patente</label><br />
                @Html.Editor("patente")
                @Html.ValidationMessage("", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <br />
                <input type="submit" value="Agregar" class="btn btn-primary" />

            </div>
        </div>
    </div>
}
    <table class="table">
        <tr>
            <th>
                Patente
            </th>
            <th>
                Año
            </th>
            <th>
                Color
            </th>
            <th>
                Observación
            </th>
            <th>
                Marca
            </th>
            <th>
                Modelo
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PATENTE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ANO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COLOR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OBSERVACION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MODELO.MARCA.DESCRIPCION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MODELO.DESCRIPCION_MODELO)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_AUTO }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.ID_AUTO }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_AUTO })
                </td>
            </tr>
        }

    </table>
